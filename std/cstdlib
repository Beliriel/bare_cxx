#ifndef _CSTDLIB_HEADER_
#define _CSTLIB_HEADER_

#include <cstdint>

namespace std {

#if 1
struct bare_div_t
{
  int quot;
  int rem;
};

struct ldiv_t
{
  long quot;
  long rem;
};

struct lldiv_t
{
  long long quot;
  long long rem;
};

struct imaxdiv_t
{
  intmax_t quot;
  intmax_t rem;
};
#endif

inline bare_div_t bare_div(int x, int y)
{
  static_assert(sizeof(int) == 4, "div");
  register int x_ asm ("eax") = x;
  register int quot asm ("eax");
  register int rem asm ("edx");
  asm ("cdq\n\tidivl %2" 
       : "=r" (quot), "=r" (rem)
       : "rm" (y), "0" (x_));
  return { quot, rem };
}


}

#endif
