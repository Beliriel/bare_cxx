#ifndef _CSETJMP_HEADER_
#define _CSETJMP_HEADER_

#include <cstding>

#define setjmp(buf) std::setjmp(buf)

namespace std {

// The standard says it is an array type
typedef uint64_t[8] jmp_buf;


int setjmp(jmp_buf buf);

void longjmp(jmp_buf buf, int status);

}

#endif

