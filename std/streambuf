#ifndef _STREAMBUF_HEADER_
#define _STREAMBUF_HEADER_

#include <config.bare>
#include <string>

extern "C" {

#include "bare/libBareMetal.h"

}

namespace _STD {

/**
  * It is not close to the standard yet.
  * @author Sergei Lodyagin
  */
template <
  class CharT,
  class Traits = std::char_traits<CharT>
>
class basic_streambuf
{
public:
  typedef CharT char_type;
  typedef Traits traits_type;
  typedef typename Traits::int_type int_type;
  typedef typename Traits::off_type off_type;

  // FIXME virtual
  ~basic_streambuf() {}

  int pubsync() { return sync(); }

  // FIXME move to a derived class
  int_type sputc(char_type ch)
  {
    b_output_char(ch);
    return Traits::to_int_type(ch);
  }

  // FIXME move to a derived class, make calling virtual
  // xsputn 
  //! Non-standard arguments version, use a safe
  //! size-limted string instead of const char* + count.
  streamsize sputn(constexpr_basic_string<char_type> s)
  {
    b_output_chars(s.data(), s.size());
    return s.size();
  }

protected:
  // FIXME virtual
  int sync() { return 0; }
};

typedef basic_streambuf<char> streambuf;
typedef basic_streambuf<wchar_t> wstreambuf;

}

#endif
