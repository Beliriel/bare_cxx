#ifndef _LOCALE_HEADER_
#define _LOCALE_HEADER_

#include <bits/locale.h>
#include <bits/facets.h>

namespace std {

template<class Facet>
const Facet& use_facet(const std::locale& loc)
{
  static Facet fct;
  return fct;
}

} // std

#endif
