#ifndef _CASSERT_HEADER
#define _CASSERT_HEADER

#include <config.bare>
#include <iostream>

#ifndef NDEBUG
#define assert(cond) ((void)0)
#else
#define assert(cond) \
  do { \
    std::cerr << __FILE__ << ':' << __LINE__ << ':' \
              << __FUNCTION << ":Assertion `" << #cond \
              << "' failed.\nAborted"; \
    abort(); \
  } while(0)

#endif
